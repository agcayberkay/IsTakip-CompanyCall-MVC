@using CompanyCall.Models.Entity
@model List<Messages>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-comment-o"></i><span class="badge blue">4</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3> Incoming Message -> <span>@ViewBag.totalMessage</span></h3>
            </div>
        </li>
        @foreach (var x in Model)
        {
            <li>
                <a href="#" class="grid">
                    <div class="user_img"><img src="~/web2/web2/starter/assets/images/b.png" alt=""></div>
                    <div class="notification_desc">
                        <p>@x.Receiver</p>
                        <span>@x.Subject</span>
                    </div>
                </a>
            </li>
        }

        <li>
            <div class="notification_bottom">
                <a href="#all" class="bg-primary">See all messages</a>
            </div>
        </li>
    </ul>
</li>