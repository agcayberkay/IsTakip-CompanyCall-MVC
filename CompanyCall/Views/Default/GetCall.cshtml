@model CompanyCall.Models.Entity.InCall

@{
    ViewBag.Title = "GetCall";
    Layout = "~/Views/Shared/CompanyLayout.cshtml";
}

<h2>Get Call</h2>
<br />
@using (Html.BeginForm("EditCall", "Default", FormMethod.Post))
{
    <br />
    @Html.HiddenFor(x=> x.ID)
    @Html.Label("Subject")
    @Html.TextBoxFor(x => x.Subjects, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x => x.Descriptions, 10, 4, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-primary">Edit Call</button>
}

